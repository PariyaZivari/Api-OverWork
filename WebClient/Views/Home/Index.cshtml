@model List<Manager>

@{
    ViewData["Title"] = "Home Page";
    int rowCount = 1;
}
<h2>
    <a asp-action="Create" class="btn btn-success">Create New Manager</a>
</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>پرسنلی</th>
        <th>نام </th>
        <th>نام خانوادگی</th>
        <th>وضعیت </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@rowCount</td>
            <td>@item.ManagerNo</td>
            <td>@item.ManagerName</td>
            <td>@item.ManagerFamily</td>
            <td>@item.State</td>
            <td>
                <a href="Home/Edit/@item.Id" class="btn btn-warning">Edit</a>
                <a href="Home/Delete/@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        rowCount++;
    }

</table>

